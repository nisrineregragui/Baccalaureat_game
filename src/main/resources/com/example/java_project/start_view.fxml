<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="30.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.java_project.StartController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <!-- Title -->
    <Label styleClass="title-label" text="BaccalaurÃ©at Game" />

    <!-- Logo -->
    <ImageView fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@images/logo.jpg" />
        </image>
      <VBox.margin>
         <Insets bottom="20.0" top="20.0" />
      </VBox.margin>
    </ImageView>

    <!-- Buttons -->
    <HBox alignment="CENTER" spacing="40.0">
        <Button fx:id="soloButton" mnemonicParsing="false" onAction="#onSoloButtonClick" styleClass="button, solo-button" text="MODE SOLO" />
        <Button fx:id="multiButton" mnemonicParsing="false" onAction="#onMultiButtonClick" styleClass="button, multi-button" text="MODE MULTIJOUEUR" />
    </HBox>

</VBox>
