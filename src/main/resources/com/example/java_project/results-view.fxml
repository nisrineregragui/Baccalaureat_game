<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.java_project.ResultsController" styleClass="root">
    <top>
        <VBox alignment="CENTER" spacing="10">
            <padding><Insets top="30" bottom="20"/></padding>
            <Label text="FIN DE LA PARTIE !" styleClass="title-label"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" alignment="CENTER">
             <padding><Insets left="50" right="50"/></padding>
             <Label fx:id="winnerLabel" text="Le gagnant est..." styleClass="header-label" style="-fx-text-fill: #FFD700;"/>
             
             <TableView fx:id="scoresTable" prefHeight="200" styleClass="table-view">
                 <columns>
                     <TableColumn fx:id="playerColumn" text="Joueur" prefWidth="150"/>
                     <TableColumn fx:id="scoreColumn" text="Score" prefWidth="100"/>
                 </columns>
             </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <padding><Insets bottom="30" top="20"/></padding>
            <Button text="RETOUR AU SALON" onAction="#onBackToLobbyClick" styleClass="button"/>
        </HBox>
    </bottom>
</BorderPane>
