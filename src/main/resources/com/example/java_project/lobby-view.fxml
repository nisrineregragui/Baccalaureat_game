<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.java_project.LobbyController" styleClass="root">
    <top>
        <VBox alignment="CENTER" spacing="10">
            <padding><Insets top="20" bottom="20"/></padding>
            <Label text="SALLE D'ATTENTE" styleClass="title-label"/>
            <Label fx:id="connectionStatusLabel" text="En attente des copains..." styleClass="label"/>
            <Label fx:id="codeLabel" styleClass="subtitle-label" text="Code de la partie : ..."/>
        </VBox>
    </top>

    <center>
        <VBox spacing="10" alignment="CENTER">
             <padding><Insets left="50" right="50"/></padding>
             <Label text="Joueurs connectés :" styleClass="header-label"/>
             <ListView fx:id="playerList" prefHeight="200" styleClass="list-view"/>
        </VBox>
    </center>
    
    <right>
        <VBox spacing="15" alignment="TOP_CENTER" fx:id="hostControls" visible="false">
            <padding><Insets right="20" top="50" left="20"/></padding>
            <Label text="Réglages (Chef seulement)" styleClass="header-label"/>
            
            <VBox styleClass="card" spacing="10">
                <Label text="Temps (secondes)" styleClass="label"/>
                <Slider fx:id="durationSlider" min="30" max="300" value="120" showTickLabels="true" showTickMarks="true"/>
                <Label fx:id="durationLabel" text="120 sec"/>
            </VBox>
            
            <VBox fx:id="categoriesContainer" styleClass="card" spacing="5">
                <Label text="Catégories" styleClass="label"/>
                <!-- Loaded dynamically -->
            </VBox>
        </VBox>
    </right>

    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <padding><Insets bottom="30" top="20"/></padding>
            <Button text="DÉMARRER !" fx:id="startButton" onAction="#onStartGameClick" visible="false" styleClass="button"/>
        </HBox>
    </bottom>
</BorderPane>
